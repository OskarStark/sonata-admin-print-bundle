<html>
<head>
    <title>{{ object.getTitle() }}</title>
    <meta charset="UTF-8">
</head>
<body>
{% for name, view_group in admin.showgroups %}
    <table>
        {% if name %}
            <thead>
            {% block show_title %}
                <tr>
                    <th colspan="2">
                        {{ admin.trans(name) }}
                    </th>
                </tr>
            {% endblock %}
            </thead>
        {% endif %}

        <tbody>
        {% for field_name in view_group.fields %}
            {% block show_field %}
                <tr>
                    {% if elements[field_name] is defined %}
                        {{ elements[field_name]|render_view_element(object) }}
                    {% endif %}
                </tr>
            {% endblock %}
        {% endfor %}
        </tbody>
    </table>
{% endfor %}
</body>
</html>
